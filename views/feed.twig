<?xml version='1.0' encoding='UTF-8' ?>
<rss version='2.0'>
	<channel>
		<title>p3lim</title>
		<description>RSS Feed</description>
		<link>http://p3lim.net/</link>

		{% for post in posts %}
			<item>
				<title>{{ post.title }}</title>
				<link>http://p3lim.net/post/{{ post.id }}</link>
				<pubDate>{{ post.time|date('r') }}</pubDate>
				<description>{{ post.content|excerpt|striptags }}</description>
			</item>
		{% endfor %}
	</channel>
</rss>
